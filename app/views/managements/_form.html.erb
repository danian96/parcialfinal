  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name , class: "form-control", placeholder: "Enter name", required: true  %>
  </div>

  <div class="field">
    <%= f.label :init_date %>
    <%= f.date_select :init_date,{ :start_year => Date.current.year, :end_year => 1920 }, { :class => "form-control m-input" }%>
  </div>

  <div class="field">
    <%= f.label :finish_date %>
    <%= f.date_select :finish_date,{ :start_year => Date.current.year, :end_year => 1920 }, { :class => "form-control m-input" }%>
  </div>

  <div class="form-group">
    <%= f.label :turn_id %>
    <%= f.collection_select(:turn_id, Turn.all, :id, :name, {hide_label: true}, class: "form-control m-input m-input--air") %>
  </div>
