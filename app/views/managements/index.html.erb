<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Lista de Gestiones</h3>
        </div>

        <div class="box-body">
          <div id="management_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="management_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Fecha de Inicio</th>
                      <th>Fecha de Final</th>
                      <th>Calendario</th>
                      <th class="col-xs-1">Actions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @managements.each do |m| %>
                      <tr>
                        <td> <%= m.name %> </td>
                        <td> <%= m.init_date %> </td>
                        <td> <%= m.finish_date %> </td>
                        <td> <%= link_to 'Calendario' ,Calendar.find_by(management_id: m.id) %> </td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_management_url(m), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), management_path(m.id), class: 'btn btn-sm btn-success' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), management_url(m), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this element?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>

                  <tfoot>
                    <tr role="row">
                      <th>Nombre</th>
                      <th>Fecha de Inicio</th>
                      <th>Fecha de Final</th>
                      <th>Calendario</th>
                      <th class="col-xs-1">Actions</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'New management', new_management_path, class: 'btn btn-success pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'New Calendar', new_calendar_path, class: 'btn btn-success pull-right' %>
  </div>
</div>
