<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Lista de Turnos</h3>
        </div>

        <div class="box-body">
          <div id="turns_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <h1>Turnos</h1>

                <table id="turns_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th class="col-xs-1">Acciones</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @turns.each do |turn| %>
                      <tr>
                        <td><%= turn.name %></td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_turn_url(turn), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), turn_path(turn.id), class: 'btn btn-sm btn-success' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), turn_url(turn), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this element?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot>
                    <tr role="row">
                      <th>Nombre</th>
                      <th class="col-xs-1">Acciones</th>
                    </tr>
                  </tfoot>
                </table>

                <br>
              </div>
            </div>

          </div>
        </div>

    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-10">
        <%= link_to 'Agregar nuevo Turno', new_turn_path, class: 'btn btn-success pull-right' %>
      </div>
    </div>
  </div>

</div>
