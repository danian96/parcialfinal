<p id="notice"><%= notice %></p>

<h1>Schedule Details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Init date</th>
      <th>Tag</th>
      <th>Schedule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_details.each do |schedule_detail| %>
      <tr>
        <td><%= schedule_detail.name %></td>
        <td><%= schedule_detail.description %></td>
        <td><%= schedule_detail.init_date %></td>
        <td><%= schedule_detail.tag %></td>
        <td><%= schedule_detail.schedule %></td>
        <td><%= link_to 'Show', schedule_detail %></td>
        <td><%= link_to 'Edit', edit_schedule_detail_path(schedule_detail) %></td>
        <td><%= link_to 'Destroy', schedule_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

