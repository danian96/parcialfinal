<div class="form-group">
  <%= f.label :name, "Nombre de Curso:" %>
  <%= f.text_field :name, class: "form-control", placeholder: "Introduzca el Nombre", required: true %>
  <span class="help-block"><i>* El Campo es requerido</i><span>
</div>

  <div class="form-group">
    <%= f.label :grade_id, "Curso al que corresponde" %>
    <%= f.collection_select(:grade_id, Grade.all, :id, :name, {hide_label: true}, class: "form-control m-input m-input--air") %>
  </div>

  <div class="form-group">
    <%= f.label :user_id, "Profesor del Curso" %>
    <%= f.collection_select(:user_id, User.where(role: 'teacher'), :id, :name, {hide_label: true}, class: "form-control m-input m-input--air") %>
  </div>
