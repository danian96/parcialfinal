<p id="notice"><%= notice %></p>

<h1>Calendar Details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Init date</th>
      <th>Description</th>
      <th>Calendar</th>
      <th>Calendar tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendar_details.each do |calendar_detail| %>
      <tr>
        <td><%= calendar_detail.name %></td>
        <td><%= calendar_detail.init_date %></td>
        <td><%= calendar_detail.description %></td>
        <td><%= calendar_detail.calendar %></td>
        <td><%= calendar_detail.calendar_tag %></td>
        <td><%= link_to 'Show', calendar_detail %></td>
        <td><%= link_to 'Edit', edit_calendar_detail_path(calendar_detail) %></td>
        <td><%= link_to 'Destroy', calendar_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

