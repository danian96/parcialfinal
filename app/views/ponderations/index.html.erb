<p id="notice"><%= notice %></p>

<h1>Ponderations</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Observation</th>
      <th>Student</th>
      <th>Pondered activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ponderations.each do |ponderation| %>
      <tr>
        <td><%= ponderation.value %></td>
        <td><%= ponderation.observation %></td>
        <td><%= ponderation.student %></td>
        <td><%= ponderation.pondered_activity %></td>
        <td><%= link_to 'Show', ponderation %></td>
        <td><%= link_to 'Edit', edit_ponderation_path(ponderation) %></td>
        <td><%= link_to 'Destroy', ponderation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

