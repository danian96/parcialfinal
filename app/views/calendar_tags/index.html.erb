<p id="notice"><%= notice %></p>

<h1>Calendar Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendar_tags.each do |calendar_tag| %>
      <tr>
        <td><%= calendar_tag.name %></td>
        <td><%= link_to 'Show', calendar_tag %></td>
        <td><%= link_to 'Edit', edit_calendar_tag_path(calendar_tag) %></td>
        <td><%= link_to 'Destroy', calendar_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

