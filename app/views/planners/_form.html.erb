<div class="form-group">
  <%= f.label :name, "Nombre:" %>
  <%= f.text_field :name, class: "form-control", placeholder: "Introduzca el Nombre", required: true %>
  <span class="help-block"><i>* El Campo es requerido</i><span>
</div>

<div class="form-group">
  <%= f.label :student_id %>
  <%= f.collection_select(:student_id, Student.all, :id, :name, {hide_label: true}, class: "form-control m-input m-input--air") %>
</div>
