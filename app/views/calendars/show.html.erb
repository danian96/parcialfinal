<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Informacion del Calendario Escolar</h3>
        </div>

        <div class="box-body">
          <p id="notice"><%= notice %></p>

          <p>
            <strong>Nombre:</strong>
            <%= @calendar.name %>
          </p>

          <p>
            <strong>Gestion:</strong>
            <%= Management.find(@calendar.management.id).name %>
          </p>

          <%= link_to 'Editar', edit_calendar_path(@calendar) %> |
          <%= link_to 'Regresar', managements_path %>
        </div>
      </div>
    </div>
  </div>




<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Lista de Actividades del Calendario Escolar</h3>
        </div>

        <div class="box-body">
          <div id="calendar_details_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <h1>Actividades</h1>

                <table id="calendar_details_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Fecha de Inicio</th>
                      <th>Descripcion</th>
                      <th>Tipo de Actividad</th>
                      <th class="col-xs-1">Acciones</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @calendar_details.each do |calendar_detail| %>
                      <tr>
                        <td><%= calendar_detail.name %></td>
                        <td><%= calendar_detail.init_date %></td>
                        <td><%= calendar_detail.description %></td>
                        <td><%= CalendarTag.find_by(id: calendar_detail.calendar_tag.id).name %></td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_calendar_detail_url(calendar_detail), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), calendar_detail_path(calendar_detail.id), class: 'btn btn-sm btn-success' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), calendar_detail_url(calendar_detail), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this element?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot>
                    <tr role="row">
                      <th>Nombre</th>
                      <th>Fecha de Inicio</th>
                      <th>Descripcion</th>
                      <th>Tipo de Actividad</th>
                      <th class="col-xs-1">Acciones</th>
                    </tr>
                  </tfoot>
                </table>

                <br>
              </div>
            </div>

          </div>
        </div>

    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-10">
        <%= link_to 'Agregar nueva Actividad al Calendario Escolar', new_calendar_detail_path, class: 'btn btn-success pull-right' %>
      </div>
    </div>
  </div>

</div>

<br>
<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Lista de Tipos de Actividades</h3>
        </div>

        <div class="box-body">
          <div id="calendar_tag_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <h1>Tipos de Actividades</h1>

                <table id="calendar_tag_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th class="col-xs-1">Acciones</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @calendar_tags.each do |calendar_tag| %>
                      <tr>
                        <td><%= calendar_tag.name %></td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_calendar_tag_url(calendar_tag), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), calendar_tag_path(calendar_tag.id), class: 'btn btn-sm btn-success' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), calendar_tag_url(calendar_tag), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this element?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot>
                    <tr role="row">
                      <th>Nombre</th>
                      <th class="col-xs-1">Acciones</th>
                    </tr>
                  </tfoot>
                </table>

                <br>
              </div>
            </div>

          </div>
        </div>

    </div>

  </div>

</div>
<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'New Calendar Tag', new_calendar_tag_path, class: 'btn btn-success pull-right' %>
  </div>
</div>
